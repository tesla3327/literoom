{
  "name": "literoom",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @literoom/web dev",
    "build": "pnpm --filter @literoom/web build",
    "preview": "pnpm --filter @literoom/web preview",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "pnpm --filter @literoom/core test && pnpm --filter @literoom/web test:unit",
    "test:e2e": "pnpm --filter @literoom/web test:e2e",
    "coverage": "pnpm coverage:ts && pnpm coverage:rust",
    "coverage:ts": "pnpm coverage:core && pnpm coverage:web",
    "coverage:core": "pnpm --filter @literoom/core coverage",
    "coverage:web": "pnpm --filter @literoom/web coverage",
    "coverage:rust": "cargo llvm-cov --workspace --all-features",
    "coverage:rust:lcov": "cargo llvm-cov --workspace --all-features --lcov --output-path target/llvm-cov/lcov.info",
    "coverage:rust:html": "cargo llvm-cov --workspace --all-features --html",
    "wasm:build": "cd crates/literoom-wasm && wasm-pack build --target web --out-dir ../../packages/wasm",
    "wasm:build:dev": "cd crates/literoom-wasm && wasm-pack build --target web --dev --out-dir ../../packages/wasm"
  },
  "devDependencies": {
    "agent-browser": "^0.6.0",
    "prettier": "^3.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
